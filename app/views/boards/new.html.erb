<div class="container">
  <h2 class="section-title">New Board</h2>
	<%= form_with(model: @board, local: true) do |f| %>
		<div class="field">
			<%= f.label :name,'Name' %>
		</div>
		<div class="field">
			<%= f.text_field :name, class: 'text-field' %>
		</div>
		<div class="field">
			<%= f.label :description,'Description' %>
		</div>
		<div class="field">
			<%= f.text_area :description, class: 'text-area' %>
		</div>
		<div class="board-submit">
			<%= f.submit 'Submit', class: 'btn-submit' %>
		</div>
	<% end %>
</div>